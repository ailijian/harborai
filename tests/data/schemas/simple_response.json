{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "简单响应结构",
  "description": "用于验证基础API响应的JSON Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "响应唯一标识符"
    },
    "object": {
      "type": "string",
      "description": "对象类型",
      "enum": ["chat.completion", "text.completion", "embedding"]
    },
    "created": {
      "type": "integer",
      "description": "创建时间戳",
      "minimum": 0
    },
    "model": {
      "type": "string",
      "description": "使用的模型名称"
    },
    "choices": {
      "type": "array",
      "description": "响应选择列表",
      "items": {
        "type": "object",
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0
          },
          "message": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": ["assistant", "user", "system"]
              },
              "content": {
                "type": "string"
              }
            },
            "required": ["role", "content"]
          },
          "finish_reason": {
            "type": "string",
            "enum": ["stop", "length", "content_filter", "tool_calls"]
          }
        },
        "required": ["index", "message", "finish_reason"]
      },
      "minItems": 1
    },
    "usage": {
      "type": "object",
      "description": "使用统计信息",
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["prompt_tokens", "completion_tokens", "total_tokens"]
    }
  },
  "required": ["id", "object", "created", "model", "choices", "usage"]
}