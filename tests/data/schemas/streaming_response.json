{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "流式响应结构",
  "description": "用于验证流式API响应的JSON Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "响应唯一标识符"
    },
    "object": {
      "type": "string",
      "description": "对象类型",
      "enum": ["chat.completion.chunk", "reasoning.completion.chunk"]
    },
    "created": {
      "type": "integer",
      "description": "创建时间戳",
      "minimum": 0
    },
    "model": {
      "type": "string",
      "description": "使用的模型名称"
    },
    "choices": {
      "type": "array",
      "description": "流式响应选择列表",
      "items": {
        "type": "object",
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0
          },
          "delta": {
            "type": "object",
            "description": "增量内容",
            "properties": {
              "role": {
                "type": "string",
                "enum": ["assistant", "user", "system"]
              },
              "content": {
                "type": "string",
                "description": "增量文本内容"
              },
              "reasoning_content": {
                "type": "string",
                "description": "增量推理内容（推理模型特有）"
              }
            }
          },
          "finish_reason": {
            "type": ["string", "null"],
            "enum": ["stop", "length", "content_filter", "tool_calls", "reasoning_complete", null]
          },
          "logprobs": {
            "type": ["object", "null"],
            "description": "对数概率信息",
            "properties": {
              "content": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "logprob": {
                      "type": "number"
                    },
                    "bytes": {
                      "type": ["array", "null"],
                      "items": {
                        "type": "integer"
                      }
                    },
                    "top_logprobs": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "token": {
                            "type": "string"
                          },
                          "logprob": {
                            "type": "number"
                          },
                          "bytes": {
                            "type": ["array", "null"],
                            "items": {
                              "type": "integer"
                            }
                          }
                        },
                        "required": ["token", "logprob"]
                      }
                    }
                  },
                  "required": ["token", "logprob"]
                }
              }
            }
          }
        },
        "required": ["index", "delta"]
      },
      "minItems": 1
    },
    "usage": {
      "type": ["object", "null"],
      "description": "使用统计信息（仅在最后一个chunk中出现）",
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "reasoning_tokens": {
          "type": "integer",
          "description": "推理过程使用的token数量",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["prompt_tokens", "completion_tokens", "total_tokens"]
    },
    "system_fingerprint": {
      "type": "string",
      "description": "系统指纹标识"
    }
  },
  "required": ["id", "object", "created", "model", "choices"]
}