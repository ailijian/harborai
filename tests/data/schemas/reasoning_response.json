{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "推理模型响应结构",
  "description": "用于验证推理模型（如deepseek-reasoner, ernie-x1-turbo-32k）复杂响应的JSON Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "响应唯一标识符"
    },
    "object": {
      "type": "string",
      "description": "对象类型",
      "enum": [
        "chat.completion",
        "reasoning.completion"
      ]
    },
    "created": {
      "type": "integer",
      "description": "创建时间戳",
      "minimum": 0
    },
    "model": {
      "type": "string",
      "description": "使用的推理模型名称",
      "pattern": ".*(r1|x1|seed).*"
    },
    "choices": {
      "type": "array",
      "description": "推理响应选择列表",
      "items": {
        "type": "object",
        "properties": {
          "index": {
            "type": "integer",
            "minimum": 0
          },
          "message": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": [
                  "assistant",
                  "user",
                  "system"
                ]
              },
              "content": {
                "type": "string"
              },
              "reasoning_content": {
                "type": "string",
                "description": "推理过程内容（推理模型特有）"
              },
              "reasoning_tokens": {
                "type": "integer",
                "description": "推理过程使用的token数量",
                "minimum": 0
              }
            },
            "required": [
              "role",
              "content"
            ]
          },
          "finish_reason": {
            "type": "string",
            "enum": [
              "stop",
              "length",
              "content_filter",
              "tool_calls",
              "reasoning_complete"
            ]
          },
          "reasoning_metadata": {
            "type": "object",
            "description": "推理元数据",
            "properties": {
              "reasoning_steps": {
                "type": "integer",
                "description": "推理步骤数量",
                "minimum": 0
              },
              "confidence_score": {
                "type": "number",
                "description": "置信度分数",
                "minimum": 0,
                "maximum": 1
              },
              "reasoning_time_ms": {
                "type": "integer",
                "description": "推理耗时（毫秒）",
                "minimum": 0
              }
            }
          }
        },
        "required": [
          "index",
          "message",
          "finish_reason"
        ]
      },
      "minItems": 1
    },
    "usage": {
      "type": "object",
      "description": "使用统计信息（包含推理token）",
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "completion_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "reasoning_tokens": {
          "type": "integer",
          "description": "推理过程使用的token数量",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "prompt_tokens",
        "completion_tokens",
        "total_tokens"
      ]
    },
    "reasoning_summary": {
      "type": "object",
      "description": "推理过程摘要",
      "properties": {
        "total_reasoning_time_ms": {
          "type": "integer",
          "minimum": 0
        },
        "reasoning_quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reasoning_complexity": {
          "type": "string",
          "enum": [
            "simple",
            "moderate",
            "complex",
            "very_complex"
          ]
        }
      }
    }
  },
  "required": [
    "id",
    "object",
    "created",
    "model",
    "choices",
    "usage"
  ]
}