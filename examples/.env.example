# HarborAI 环境变量配置模板
# 复制此文件为 .env 并填入你的实际配置

# =============================================================================
# API 密钥配置 (必需)
# =============================================================================

# DeepSeek API 配置
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI API 配置
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude API 配置
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# 豆包 API 配置
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 文心一言 API 配置
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here
WENXIN_BASE_URL=https://aip.baidubce.com

# =============================================================================
# HarborAI 功能配置 (可选)
# =============================================================================

# 日志配置
HARBORAI_LOG_LEVEL=INFO
HARBORAI_ENABLE_ASYNC_LOGGING=true
HARBORAI_LOG_FILE_PATH=./logs/harborai.log

# 成本追踪配置
HARBORAI_ENABLE_COST_TRACKING=true
HARBORAI_COST_BUDGET_DAILY=100.0
HARBORAI_COST_CURRENCY=RMB

# 性能配置
HARBORAI_ENABLE_CACHING=true
HARBORAI_CACHE_TTL=3600
HARBORAI_MAX_RETRIES=3
HARBORAI_TIMEOUT=30

# 监控配置
HARBORAI_ENABLE_METRICS=true
HARBORAI_METRICS_ENDPOINT=http://localhost:8080/metrics

# 数据库配置 (用于日志持久化)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=harborai_logs
POSTGRES_USER=harborai
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# 开发环境配置
# =============================================================================

# 调试模式
DEBUG=false
VERBOSE=false

# 测试配置
TEST_MODE=false
MOCK_RESPONSES=false

# =============================================================================
# 安全配置
# =============================================================================

# 日志脱敏
HARBORAI_ENABLE_LOG_MASKING=true
HARBORAI_MASK_API_KEYS=true
HARBORAI_MASK_USER_DATA=true

# 访问控制
HARBORAI_ENABLE_ACCESS_CONTROL=false
HARBORAI_ALLOWED_IPS=127.0.0.1,localhost

# =============================================================================
# 高级配置
# =============================================================================

# 并发控制
HARBORAI_MAX_CONCURRENT_REQUESTS=10
HARBORAI_RATE_LIMIT_PER_MINUTE=60

# 降级策略
HARBORAI_ENABLE_FALLBACK=true
HARBORAI_FALLBACK_MODELS=deepseek-chat,gpt-3.5-turbo,claude-3-haiku

# 插件配置
HARBORAI_PLUGIN_PATH=./plugins
HARBORAI_ENABLE_CUSTOM_PLUGINS=false