# HarborAI测试环境Docker镜像
# 基于Python 3.11官方镜像
FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PYTEST_CURRENT_TEST=""
ENV CI=true

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 创建非root用户
RUN useradd -m -u 1000 testuser && \
    chown -R testuser:testuser /app

# 复制requirements文件
COPY requirements.txt requirements-test.txt ./

# 安装Python依赖
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-test.txt

# 复制项目文件
COPY . .

# 设置文件权限
RUN chown -R testuser:testuser /app

# 切换到非root用户
USER testuser

# 创建测试报告目录
RUN mkdir -p tests/reports tests/logs

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import harborai; print('OK')" || exit 1

# 默认命令
CMD ["python", "-m", "pytest", "tests/", "-v", "--tb=short"]

# 标签信息
LABEL maintainer="HarborAI Team"
LABEL version="1.0"
LABEL description="HarborAI测试环境容器"
LABEL org.opencontainers.image.source="https://github.com/harborai/harborai"